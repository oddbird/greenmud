<ol class="breadcrumb">
  {% if node.meta.book -%}
    <li class="crumb">
      <a href="/{{ node.meta.book_slug }}/">{{ node.meta.book }}</a>
    </li>
  {%- else -%}
    <li class="crumb">
      <a href="/">{{ node.meta.novel }}</a>
    </li>
  {%- endif %}
  {% if node.meta.chapter -%}
    <li class="crumb">
      <a href="../{{ node.meta.chapter_slug }}/">{{ node.meta.chapter }}</a>
    </li>
  {%- endif %}
</ol>
