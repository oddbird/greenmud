{% extends 'base.j2' %}

{% block title -%}
  {%- if resource.meta.chapter -%}
    {{ resource.meta.chapter }} |
  {% else -%}
    {%- if resource.meta.book -%}
      {{ resource.meta.book }} |
    {% endif -%}
  {%- endif -%}
  GreenMud
{%- endblock %}

{% block styles -%}
  <link rel="stylesheet" href="{{ resource.meta.root_url }}media/css/novel.css" />
  {% if resource.meta.extra_styles -%}
  {%- set style_url = 'css/chapters/' + resource.meta.extra_styles -%}
  <link rel="stylesheet" href="{{ resource.meta.root_url }}media/{{ style_url }}" />
  {% endif %}
{% endblock styles %}

{% block body %}

  <aside class="warning">
    <h2>This novel has not (yet) been released on vinal.</h2>
    <p>
      This novel is being developed for the very latest web technology.
      Eventually, you have to throw out the old VCR & switch to DVDs.
      Please <a href="http://browsehappy.com/">upgrade your browser</a>
      for the full experience.
    </p>
  </aside>

  <a id="toggle" title="show/hide controls">show/hide controls</a>
  <div class="controls">
  {% block header -%}
    {% include "novel/_page-nav.j2" %}
    <nav role="navigation">
      {% include "novel/_meta-nav.j2" %}
      {% include "novel/_breadcrumb.j2" %}
    </nav>
  {%- endblock %}
  </div>

  {% include "novel/_toc.j2" %}

  {% block main %}{% endblock main %}

{% endblock body%}
