{% extends 'novel/base-novel.j2' %}

{% block main %}
<section id="{{ resource.meta.slug }}" class="page {{ resource.meta.book_slug }} {{ resource.meta.chapter_slug }} {{ resource.meta.voice }} {{ resource.meta.demo }}" data-url="{{ resource.meta.url }}" data-body-class="{{ resource.meta.body_class }}">

  {% if resource.meta.template %}
  <header role="banner">
    <hgroup class="site-title">
      {% filter typogrify %}
      <h1><a href="/">{{ resource.meta.novel }}</a></h1>
      <h2><a href="/about.html">{{ resource.meta.tagline }}</a></h2>
      {% endfilter %}
    </hgroup>
  </header>
  {% endif %}

  <div class="content"  role="main">
    {% filter typogrify %}
    {% block page %}{% endblock page %}
    {% endfilter %}
  </div>

  {% if resource.meta.template %}
  <footer role="contentinfo">
  <div class="footer">
    {% filter typogrify %}
    <p class="license">
      <a href="http://creativecommons.org/licenses/by-nc-sa/3.0/" rel="license">Copyright Â©</a>
      2006-2012 <b>{{ resource.meta.author }}</b>
    </p>
    {% endfilter %}
  </div>
  </footer>
  {% endif %}
</section>
{% endblock main %}