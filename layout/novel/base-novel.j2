{% extends 'base.j2' %}

{% block title -%}
  GreenMud
  {%- if resource.meta.book %}
    : {{ resource.meta.book }}
  {% endif %}
  {% if resource.meta.chapter %}
  : {{ resource.meta.chapter }}
  {% endif %}
  {% if resource.meta.title %}
  : {{ resource.meta.title }}
  {%- endif -%}
{%- endblock %}

{% block styles -%}
  <link rel="stylesheet" href="{{ media_url('css/novel.css') }}" />
  {% if resource.meta.extra_styles -%}
  {%- set style_url = 'css/' + resource.meta.extra_styles -%}
  <link rel="stylesheet" href="{{ media_url(style_url) }}" />
  {% endif %}
{% endblock styles %}

{% block body %}
  
  <a id="toggle" title="show/hide controls">show/hide controls</a>
  <div class="controls">
  {% block header -%}
    {% include "novel/_page-nav.j2" %}
    <nav role="navigation">
      {% include "novel/_meta-nav.j2" %}
      {% include "novel/_breadcrumb.j2" %}
    </nav>
  {%- endblock %}
  </div>
  
  {% include "novel/_toc.j2" %}
  
  {% block main %}{% endblock main %}

{% endblock body%}
