{% extends 'base.j2' %}

<title>{% block title %}{{ resource.meta.title }} | {{ super() }}{% endblock %}</title>

{% block body %}
<a href="#" id="toggle">toggle controls</a>

<div class="controls before">
{% block header -%}

  <h1 role="banner"><a href="/" rel="home">{{ resource.meta.novel }}</a></h1>

  {% if node.meta.book or node.meta.chapter -%}
  <nav class="breadcrumb" role="navigation">
    <h2 class="hidden">Breadcrumb Navigation</h2>
    <ul class="crumb-list">
      {% if node.meta.book -%}
        <li class="crumb">
          <a href="/{{ node.meta.book_slug }}/">{{ node.meta.book }}</a>
        </li>
      {%- endif %}
      {% if node.meta.chapter -%}
        <li class="crumb"><a href="../{{ node.meta.chapter_slug }}/">{{ node.meta.chapter }}</a></li>
      {%- endif %}
    </ul>
  </nav>
  {%- endif %}

{%- endblock %}
</div>

<section id="main" role="main" class="chapter {{ resource.meta.chapter_slug }}">
  {% block main %}{% endblock main %}
</section>

<div class="controls after">
  <nav class="page">
    <h2 class="hidden">Page Navigation</h2>
    <ul>
      <li class="prev">
        {%- if resource.meta.prev_url -%}
          <a href="{{ resource.meta.prev_url }}">Previous</a>
        {%- else -%}
          <span>No Previous</span>
        {%- endif -%}
      </li>
      <li class="next"><a href="{{ resource.meta.next_url or '#' }}">Next</a></li>
    </ul>
  </nav>
  <footer role="contentinfo">
    [cc] 2011 <a href="http://eric.andmeyer.com">Eric A Meyer</a>
  </footer>
</div>
{% endblock body%}
