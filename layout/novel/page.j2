{% extends 'novel/base-novel.j2' %}

{% block main %}
<section id="{{ resource.meta.slug }}" class="page {{ resource.meta.book_slug }} {{ resource.meta.chapter_slug }} {{ resource.meta.voice }} {{ resource.meta.demo }}" data-url="{{ resource.meta.url }}" data-body-class="{{ resource.meta.body_class }}">
  {% if resource.meta.template %}
  {% include "novel/_template-banner.j2" %}
  {% endif %}

  <div class="content"  role="main">
    {% filter typogrify %}
    {% block page %}{% endblock page %}
    {% endfilter %}
  </div>

  {% if resource.meta.template %}
  {% include "novel/_template-info.j2" %}
  {% endif %}
</section>
{% endblock main %}