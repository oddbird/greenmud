<!DOCTYPE html>
<!--[if lte IE 8 ]>             <html class="no-js ie" lang="en" dir="ltr">   <![endif]-->
<!--[if IE 9 ]>                 <html class="no-js ie9" lang="en" dir="ltr">  <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->  <html class="no-js" lang="en" dir="ltr">      <!--<![endif]-->
<head>
  <meta charset="utf-8">

  <!-- Page Info -->
  <title>{% block title %}{{ resource.meta.title }}{% endblock %}</title>
  <meta name="description" content="{{ resource.meta.description }}">

  <!-- Site Info -->
  {% block robots %}<meta name="robots" content="index, follow" />{% endblock %}
  <meta name="author" content="{{ resource.meta.author }}" />
  <meta name="keywords" content="{{ resource.meta.keywords }}" />
  <meta name="language" content="en-us" />

  <!-- Microformat Profiles -->
  <!-- hCard, hCalendar, rel-license, rel-tag, XOXO, XFN, VoteLinks -->
  <link rel="profile" href="http://microformats.org/profile/specs/" />

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
  <meta http-equiv="cleartype" content="on">
  <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1" />

  <!-- http://t.co/dKP3o1e -->
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="viewport" content="width=device-width, target-densitydpi=160dpi, initial-scale=1">

  <!--iOS. Delete if not required -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <link rel="apple-touch-startup-image" href="{{ media_url('images/favicons/splash.png') }}">

  <!-- favicon.ico -->
  <link rel="shortcut icon" href="{{ media_url('images/favicons/favicon.ico') }}" />
  <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ media_url('images/favicons/apple-touch-icon-114x114-precomposed.png') }}">
  <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ media_url('images/favicons/apple-touch-icon-72x72-precomposed.png') }}">
  <link rel="apple-touch-icon-precomposed" href="{{ media_url('images/favicons/apple-touch-icon-precomposed.png') }}">

  <!-- Styles -->

  {% block styles %}
  {# <link rel="stylesheet" href="{{ media_url('css/binding.css') }}" /> #}
  {% endblock styles %}

  <!-- Modernizr -->
  {% block headjs %}
  <script src="{{ media_url('js/modernizr.js') }}"></script>
  <script src="{{ media_url('js/modernizr.selectors.js') }}"></script>
  <script src="{{ media_url('js/elem-details.js') }}"></script>
  {% endblock headjs %}

  <!-- Page-Specific Head -->
  {% block extrahead %}{% endblock %}

</head>
<body id="greengreenmud-com">
{% block body %}

  <a href="#" id="toggle">toggle controls</a>

  <div class="controls before">
  {% block header -%}

    <h1 role="banner"><a href="/" rel="home">{{ resource.meta.novel }}</a></h1>

    <nav class="crumb" role="navigation">
      <h2 class="navhead">Breadcrumb Navigation</h2>
      {% block crumb -%}{%- endblock crumb %}
    </nav>

  {%- endblock %}
  </div>

  <section id="main" role="main" class="chapter {{ resource.meta.chapterno }}">
  {% block main %}{% endblock main %}
  </section>

  <div class="controls after">
    <footer role="contentinfo">
      [cc] 2011 <a href="http://eric.andmeyer.com">Eric A Meyer</a>
    </footer>
    <nav class="page">
      <h2 class="navhead">Page Navigation</h2>
      <ul>
        <li class="prev"><a href="#">Previous</a></li>
        <li class="next"><a href="#">Next</a></li>
      </ul>
    </nav>
  </div>

{% endblock body%}

{% block js %}

  <script src="{{ media_url('js/jquery-1.6.1.js') }}"></script>
  <script src="{{ media_url('js/jquery.placeholder.js') }}"></script>
  <script src="{{ media_url('js/jquery.ba-dotimeout.js') }}"></script>
  <script src="{{ media_url('js/viewport.js') }}"></script>
  <script src="{{ media_url('js/ICanHaz.js') }}"></script>
  <script src="{{ media_url('js/local.js') }}"></script>

  {% block scripts %}
  {% endblock scripts %}

  {% block analytics %}
  {# {% include "analytics.j2" %} #}
  {% endblock analytics %}

{% endblock js %}
</body>
</html>